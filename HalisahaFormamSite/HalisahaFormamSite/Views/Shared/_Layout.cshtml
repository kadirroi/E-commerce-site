<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
   
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" >
        <div class="container">
            <div class="navbar-headerte"  >
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("HalısahaFormam ", "Index", "Home", null, new { @class = "navbar-brand " })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    
                   
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>

                 @if (Session["LogedUserFullname"] != null)
                 {
                    <li>@Html.ActionLink("Profil", "Index", "Profile")</li>
                  }
                    
                    <li>@Html.ActionLink("Arama", "Search", "SearchProduct")</li>
                    <li>@Html.ActionLink("Contact", "Index", "Contact")</li>
                    <li>@{Html.RenderAction("CartSummary", "ShoppingCart");}</li>
             
                  
                    
                   
                   
                   
   
                  
                 
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.Partial("_GirisPartial")</li>
                    
                </ul>
             
            </div>

    
        </div>
    </div>
    <div class="container body-content">
        <div class="panel panel-success">
            
            <div class="panel-body"></div>
            <!--background color had default, didn't change like header, so i extended color on style-->
           
       
           
             @RenderBody()
            <div class="panel-footer">Panel Footer
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            
            </div>
        </div>
      
          
     
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
