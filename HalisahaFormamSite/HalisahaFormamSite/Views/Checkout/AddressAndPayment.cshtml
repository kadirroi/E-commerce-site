@model HalisahaFormamSite.Models.Order
@{
    ViewBag.Title = "Address And Payment";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />

<script src="~/Scripts/jquery-2.1.0.js"></script>
<script src="@Url.Content("~/Scripts/")"
        type="text/javascript"></script>

@using (Html.BeginForm("AddressAndPayment", "Checkout", FormMethod.Post, new { @class = "form-horizontal" }))
{
    
    List<SelectListItem> listItems = new List<SelectListItem>();
    listItems.Add(new SelectListItem
         {
             Text = "XL",
             Value = "XL"
         });
    listItems.Add(new SelectListItem
    {
        Text = "L",
        Value = "L"
    });
    listItems.Add(new SelectListItem
         {
             Text = "M",
             Value = "M",
             Selected = true
         });
    listItems.Add(new SelectListItem
         {
             Text = "S",
             Value = "S"
         });

  

    List<SelectListItem> listItems2 = new List<SelectListItem>();
    for (int i = 0; i < 100; i++)
    {
        string s = i.ToString();
        listItems2.Add(new SelectListItem
        {

            Text=s
            
        });
    }

   List<SelectListItem> listItems1 = new List<SelectListItem>();
                            listItems1.Add(new SelectListItem
                                 {
                                     Text = "Uzun Kol",
                                     Value = "Uzun Kol"
                                 });
                            listItems1.Add(new SelectListItem
                            {
                                Text = "Kısa Kol",
                                Value = "Kısa Kol",
                                 Selected = true
                            });
    
    
                            List<SelectListItem> listItems3 = new List<SelectListItem>();
                            listItems3.Add(new SelectListItem
                            {
                                Text = "Aras Kargo",
                                Value = "Aras Kargo"
                            });
                            listItems3.Add(new SelectListItem
                            {
                                Text = "Yurt İçi Kargo",
                                 Value = "Yurt İçi Kargo",
                                Selected = true
                            });
                           
    
     <div class="form-group">
        @Html.LabelFor(m=>m.FirstName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
        </div>
    </div>
    
                           
     <div class="form-group">
        @Html.LabelFor(m=>m.UniFormName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.UniFormName, new { @class = "form-control" })
        </div>
    </div>
      
    
    <div class="form-group">
        @Html.LabelFor(m => m.UniformNumber, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
         
            @Html.DropDownListFor(model => model.UniformNumber, listItems2, "-- Seçiniz --", new { @class = "form-control" })
        </div>
    </div>
    
    
      <div class="form-group">
        @Html.LabelFor(m => m.UniformSize, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
          
            @Html.DropDownListFor(model => model.UniformSize, listItems, "-- Seçiniz --", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.StateHands, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
          
            @Html.DropDownListFor(model => model.StateHands, listItems1, "-- Seçiniz --", new { @class = "form-control" })

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Country, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Country, new { @class = "form-control" })
        </div>
    </div>
    
      <div class="form-group">
        @Html.LabelFor(m => m.City, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
        </div>
    </div>
    
      <div class="form-group">
        @Html.LabelFor(m => m.Adress, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Adress, new { @class = "form-control" })
        </div>
    </div>
    
      <div class="form-group">
        @Html.LabelFor(m => m.Phone, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
        </div>
    </div>
     <div class="form-group">
        @Html.LabelFor(m => m.kargo, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
         
            @Html.DropDownListFor(model => model.kargo, listItems3, "-- Seçiniz --", new { @class = "form-control" })
        </div>
    </div>
    <div class="control-group ">
        <div class="controls">
            <button type="submit" class="btn btn-success btn-lg "> Devam Et</button>
           
        </div>
    </div>
}





