@model IEnumerable<HalisahaFormamSite.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="~/Content/bootstrap.css" rel="stylesheet" />
<div class="container">
  
 
     <div class="row">
       

       @foreach (var item in Model)
       {
        <div class="col-md-4">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <h4 class="text-center">
                        @Html.DisplayFor(modelItem => item.Name)
                    </h4>
                </div>
                <div class="panel-body text-center">
                    <p class="lead">
                        <strong>@Html.DisplayFor(modelItem => item.Price)</strong>
                    </p>
                </div>
                <ul class="list-group list-group-flush text-center">
                    <li class="list-group-item"><i class="icon-ok text-danger"></i><img src="@Url.Content("~/Content/img/")@Html.DisplayFor(modelItem => item.PictureUrl)" width="280" height="280" class="img-responsive"></li>
                    <li class="list-group-item"><i class="icon-ok text-danger"></i>@Html.DisplayFor(modelItem =>item.indirim) İndirimde</li>
                    <li class="list-group-item"><i class="icon-ok text-danger"></i>
                    
                      <span class="glyphicon glyphicon-star"></span>   
                        
                   
                    @{
                        
                        int s=0;
                        
                        Int32.TryParse(Html.DisplayFor(modelItem=>item.stars).ToString(), out s);
                        
                     for (int i = 0; i <s;i++)
                    {
                            <span class="glyphicon glyphicon-star"></span>


                    }
                        
                    }




                    </li>
                
                
                
                
                
                </ul>
                <div class="panel-footer">
                  
                    <a href="@Url.Action("Details", "ProductDetaile", new { id = item.Id }) " class="btn-danger btn-block text-center btn-lg">Satın Al</a></div>
            </div>
        </div>
    
    
    
    }
    
     
      
       
       
        
    </div>
</div>
