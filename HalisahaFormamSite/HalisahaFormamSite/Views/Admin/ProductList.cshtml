@model IEnumerable<HalisahaFormamSite.Models.Product>

@{
    ViewBag.Title = "ProductList";
  
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<h2>ProductList</h2>


<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PictureUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.indirim)
        </th>
      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PictureUrl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.indirim)
        </td>
      
        <td>
           
            
            <a href="@Url.Action("Edit", "Admin", new { id = item.Id })" class="btn-primary btn-sm  text-center pull-left "><span class="glyphicon glyphicon-pencil"></span>Güncelle</a>
            
            
            <a href="@Url.Action("Delete", "Admin", new { id = item.Id })" class="btn-danger btn-sm  text-center pull-left col-sm-offset-2"> Sil <span class="glyphicon glyphicon-trash"></span></a>
        
        </td>
    </tr>
}

</table>
<div class="panel-body">
    <a href="@Url.Action("Add", "Admin")" class="btn-success btn-lg  text-center pull-left col-sm-offset-11 "> Ekle <span class="glyphicon glyphicon-plus"></span></a>
  

</div>